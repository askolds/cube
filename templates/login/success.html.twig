{% extends 'base.html.twig' %}

{% block singup %}
    <a href="{{ path('app_login') }}">
        <button class="btn btn-dark">Sing in</button>
    </a>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row m-3">
            <div class="col">
                <div class="alert alert-primary" role="alert">
                    Check email <strong>{{ email }}</strong> to complete registration.
                    {% if link %}
                        Or try use registration <a href="{{ link }}">link</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
